/* Power menu */

@theme "~/.config/rofi/theme.rasi"

configuration {
  font:                     "JetBrainsMono Nerd Font 8";
  hover-select:             true;
  me-select-entry:          "MousePrimary";
  me-accept-entry:          "!MousePrimary";
}

/* Window */

window {
  location:                 northeast;
  anchor:                   north;
  x-offset:                 -3px;
  y-offset:                 -2px;
  width:                    150px;
  border:                   1px;
  border-radius:            0px;
  border-color:             @main-br;
  transparency:             "real";
  background-color:         @trans;
  children:                 [ mainbox ];
}

mainbox {
  spacing:                  0;
  background-color:         transparent;
  text-color:               @main-fg;
  children:                 [ textbox-custom, listview ];
}

textbox-custom {
  font:                     "JetBrainsMono Nerd Font Bold 8";
  horizontal-align:         0.5;
  padding:                  1px 0;
  expand:                   false;
  background-color:         transparent;
  text-color:               @main-fg;
  expand:                   false;
  content:                  "ï€‘  Power";
}

/* List */

listview {
  border-radius:            0px;
  border-color:             @main-br;
  lines:                    6;
  padding:                  6px;
  background-color:         transparent;
}

element {
  padding:                  6px;
  cursor:                   pointer;
  background-color:         inherit;
  text-color:               @main-fg;
}
element selected.normal {
  border-radius:            0px;
  background-color:         @blue;
  text-color:               @select-fg;
}
element-text {
  padding:                  0 6px;
  cursor:                   inherit;
  background-color:         inherit;
  text-color:               inherit;
}
